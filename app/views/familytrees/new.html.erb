<h1>New Family Member</h1>
<div class="card glass-card" style="width: 30rem; margin-left: auto;
    margin-right: auto; margin-top: 30px; text-align: center;">
  <div class="card-body">
    <h1 class="card-title" style="margin-bottom: 60px;">Add Family Member</h1>
<div>
<%= form_with model: @familytree do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :relationship_to_user %>
    <%= form.text_field :relationship_to_user %>
  </div>
  <div>
    <%= form.label :birthday %>
    <%= form.text_field :birthday %>
     </div> <%= form.label :birthday do %>
    yyyy/mm/dd <span class="required">*</span>
<% end %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>
  <div style="margin-top: 50px; margin-bottom: 40px;">
    <%= form.submit "Create Profile", class: "btn btn-outline-success" %>
  </div>
<% end%>