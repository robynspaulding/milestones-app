<h1>Edit photo</h1>
<div class="card glass-card" style="width: 30rem; margin-left: auto;
    margin-right: auto; margin-top: 30px; text-align: center;">
  <div class="card-body">
    <h1 class="card-title" style="margin-bottom: 60px;">Edit Photo Info</h1>
<div>
<%= form_with model: @photo do |form| %>
  <div>
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.text_field :date %>
     </div> <%= form.label :birthday do %>
    yyyy/mm/dd <span class="required">*</span>
<% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end%>
