<div class="card glass-card" style="width: 30rem; margin-left: auto;
    margin-right: auto; margin-top: 30px; text-align: center;">
  <div class="card-body">
    <h1 class="card-title" style="margin-bottom: 60px;">New milestone</h1>
<div>
<%= form_with model: @milestone do |form| %>

  <div>
    <%= form.label :milestone %>
    <%= form.text_field :milestone %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.text_field :date %>
  </div>
   <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>
  <div>
    <%= form.submit class: "btn btn-info"%>
  </div>
<% end%>