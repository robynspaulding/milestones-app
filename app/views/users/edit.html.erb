<h1>Edit User Profile</h1>
<div class="card glass-card" style="width: 30rem; margin-left: auto;
    margin-right: auto; margin-top: 30px; text-align: center;">
  <div class="card-body">
    <h1 class="card-title" style="margin-bottom: 60px;">Edit Info</h1>
<div>
<%= form_with model: @user do |form| %>
  <div style="margin-top: 15px;">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div style="margin-top: 15px;">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div style="margin-top: 15px;">
    <%= form.label :birthday %>
    <%= form.text_field :birthday %>
  </div>  <%= form.label :birthday do %>
    yyyy/mm/dd <span class="required">*</span>
<% end %>

  <div style="margin-top: 15px;">
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>

  <div style="margin-top: 50px; margin-bottom: 40px;">
    <%= form.submit "Update Profile", class: "btn btn-outline-success" %>
  </div>
  <% end %>