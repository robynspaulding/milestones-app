<div class="card glass-card" style="width: 30rem; margin-left: auto;
    margin-right: auto; margin-top: 30px; text-align: center;">
  <div class="card-body">
    <h1 class="card-title" style="margin-bottom: 60px;">New Kid</h1>
<div>
<%= form_with model: @kid do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>
  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>


  <div>
    <%= form.label :birthday %>
    <%= form.text_field :birthday %>
  </div> <%= form.label :birthday do %>
    (yyyy/mm/dd) <span class="required">*</span>
<% end %>
  
  <div>
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>
  <div>
    <%= form.submit class: "btn btn-info"%>
  </div>
<% end%>